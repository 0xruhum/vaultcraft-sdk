// taken from viem: https://github.com/wagmi-dev/viem/blob/d28a5f2814d3941ec5fb92b912a6d3f48bf40a5d/tsconfig.build.json
{
    // This file is used to compile the for cjs and esm (see package.json build scripts). It should exclude all test files.
    "extends": "./tsconfig.base.json",
    "include": [
        "src"
    ],
    "exclude": [
        "test/**/*",
    ],
    "compilerOptions": {
        "sourceMap": true,
        "rootDir": "./src"
    }
}